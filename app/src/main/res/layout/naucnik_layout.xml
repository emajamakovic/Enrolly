<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding">

    <ImageView
        android:id="@+id/naucnik_photo"
        android:layout_width="304dp"
        android:layout_height="229dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enrolly2"
        app:srcCompat="@drawable/naucnik" />

    <ImageView
        android:id="@+id/enrolly2"
        app:srcCompat="@drawable/enrolly_blue"
        tools:layout_editor_absoluteX="80dp"
        android:layout_width="303dp"
        android:layout_height="69dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/quote2"
        android:layout_width="368dp"
        android:layout_height="84dp"
        android:fontFamily="@font/raleway_bold"
        android:text="Dopustite da zajedno donesemo pravu odluku !"
        android:textAlignment="center"
        android:textColor="@color/colorOnPrimary"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tacke_naucnik" />

    <Button
        android:id="@+id/getstarted"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginBottom="54dp"
        android:background="@drawable/button_background"
        android:onClick="onLogin"
        android:text="Lets get started "

        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/tacke_naucnik"
        android:layout_width="84dp"
        android:layout_height="58dp"
        android:layout_marginTop="160dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/naucnik_photo"
        app:srcCompat="@drawable/tacke2" />

</androidx.constraintlayout.widget.ConstraintLayout>